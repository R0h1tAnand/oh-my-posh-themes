{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "palette": {
    "white": "#f7f7f7",
    "black": "#111111"
  },
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "type": "text",
          "style": "plain",
          "background": "transparent",
          "foreground": "p:white",
          "template": "┌"
        },
        {
          "type": "os",
          "style": "plain",
          "background": "#464646",
          "foreground": "p:white",
          "options": {
            "linux":"arch"
          },
          "template": " {{.Icon}}{{if .WSL}} (WSL){{end}}⠀"
        },
        {
          "type": "shell",
          "style": "plain",
          "background": "p:white",
          "foreground": "p:black",
          "template": "  {{.Name}}⠀"
        },
        {
          "type": "session",
          "style": "plain",
          "background": "#ffe093",
          "foreground": "p:black",
          "template": "  {{.HostName}}{{.UserName}}⠀"
        },
        {
          "type": "git",
          "style": "plain",
          "background": "#ffffd6",
          "foreground": "p:black",
          "options": {
            "branch_icon": "  "
          },
          "template": "{{.HEAD}}⠀"
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "right",
      "segments": [
        {
          "type": "executiontime",
          "style": "plain",
          "background": "transparent",
          "foreground": "#b3ffde",
          "options": {
            "style": "austin",
            "threshold": 0
          },
          "template": "{{.FormattedMs}}"
        },
        {
          "type": "time",
          "style": "plain",
          "background": "transparent",
          "foreground": "#b3ffde",
          "options": {
            "time_format": "02/01/06 15:04"
          },
          "template": "<p:white> · </>{{.CurrentDate | date .Format}}"
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "type": "path",
          "style": "plain",
          "background": "transparent",
          "foreground": "p:white",
          "options": {
            "style": "agnoster",
            "folder_icon": "",
            "home_icon": "",
            "folder_separator_template": "<#93d0ff> » </>"
          },
          "template": "<p:white>└</><#93d0ff>[</> {{.Path}} <#93d0ff>]</>"
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "type": "status",
          "style": "plain",
          "background": "transparent",
          "foreground": "#81ff91",
          "foreground_templates": [
            "{{if gt .Code 0}}#ff3030{{end}}"
          ],
          "options": {
            "always_enabled": true
          },
          "template": "❯"
        }
      ]
    }
  ],
  "console_title_template": "Terminal",
  "final_space": true,
  "version": 4
}
